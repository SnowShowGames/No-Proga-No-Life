#include <iostream>
#include <cmath>
#include <clocale>

using namespace std;

int main()
{
	setlocale(LC_ALL, "Rus");
	int n;
	cout << "Введите n "<<"\n" << endl;
	cin >> n;
	if (n <= 0)
	{
		return 0;
	}

	int a[100];

	cout << "Введите " << n << " элементов" << endl;
	for (int i = 0; i < n; i++)
	{
		cin >> a[i];
	}

	int mn = a[0];
	int mnsm = 0;

	//сумма цифр первого элемента
	int fsm = abs(a[0]);
	while (fsm > 0)
	{
		mnsm += fsm % 10;
		fsm /= 10;
	}

	//проверка остальных элементов
	for (int i = 0; i < n; i++) {
		int sm = 0;
		fsm = abs(a[i]);

		while (fsm > 0) {
			sm += fsm % 10;
			fsm /= 10;
		}
		if (sm < mnsm) {
			mnsm = sm;
			mn = a[i];
		}
	}
	cout <<"Минимальный элемент " << mn << endl;

	for (int i = 0; i < n; i++) {
		bool f = 1;
		if (i < 2) {
			f = 0;
		}
		else {
			for (int j = 1; j < n; j++) {
				if (i % j == 0) {
					f = 1;
					break;
				}
			}
		}
		if (f) {
			a[i] = mn;
		}
	}
	
	cout << "Итог: " << endl;
	for (int i = 0; i < n; i++) {
		cout << a[i] << " ";
	}
	cout << endl;
}
